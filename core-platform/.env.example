# ===========================================
# Core Platform Environment Configuration
# Copy this file to .env and update values
# ===========================================

# Domain Configuration
# For local development, use lvh.me (resolves to 127.0.0.1)
# For production, use your actual domain
BASE_DOMAIN=lvh.me
API_DOMAIN=api.lvh.me
APP_DOMAIN=app.lvh.me
JS_APP_DOMAIN=javascript.lvh.me
PYTHON_APP_DOMAIN=python.lvh.me

# Database Configuration
DB_HOST=salesduo-db
DB_USER=root
DB_PASS=CHANGE_ME_IN_PRODUCTION
DB_NAME=salesduo_core
DB_PORT=3306
MYSQL_ROOT_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Redis Configuration
REDIS_HOST=shared-redis
REDIS_PORT=6379
REDIS_URL=redis://shared-redis:6379

# Service Ports
CORE_API_PORT=4000
DASHBOARD_PORT=3000
GATEWAY_PORT=80

# Cookie Configuration
# Set COOKIE_SECURE=true in production (requires HTTPS)
COOKIE_DOMAIN=.lvh.me
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Session Configuration (TTL in seconds)
SESSION_TTL=86400

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://app.lvh.me,http://javascript.lvh.me,http://python.lvh.me

# Frontend API URL
VITE_API_URL=http://api.lvh.me

# Docker Network
DOCKER_NETWORK=salesduo-net
